<body>
  <div class="container-fluid p-0">
    <section class="resume-section" >
      <div class="resume-section-content">
        <h1 class="mb-0">
          <span class="text-primary"><%= @profile.username %></span>
        </h1>
        <div class="subheading mb-5">
          <a href="mailto:name@email.com"><%= @profile.email %></a>
        </div>
        <p class="lead mb-5"><%= @profile.bio %></p>
      </div>
    </section>
    <hr class="m-0" />
    <section class="resume-section" id="posts">
      <div class="resume-section-content">
        <h2 class="mb-5">POSTS by @<span class="text-primary"><%= @profile.username %></span></h2>
        <% @profile.posts.each do |post| %>   
          <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
            <div class="flex-grow-1">
              <h3 class="mb-0"><%= post.created_at %></h3>
              <p><%= post.message %></p>
            </div>
            <div class="flex-shrink-0"><span class="text-primary"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span></div>
          </div>
        <% end %>
      </div>
    </section>
  </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>

